# Switch displays
# ctrl - tab : yabai -m display --focus recent
# ctrl - tab : "yabai -m query --displays --display | jq '.index' | awk '{ print ($1 == 2 ? 1 : 2) }' | xargs yabai -m display --focus"
ctrl - tab : "${HOME}"/.config/yabai/scripts/switch_displays.sh
# ^ works at least when launched from shell

# Move current container to next display and focus that display
cmd + ctrl - tab : yabai -m window --display recent

# Focus space by index
ctrl - 1 : yabai -m space --focus 1
ctrl - 2 : yabai -m space --focus 2
ctrl - 3 : yabai -m space --focus 3
ctrl - 4 : yabai -m space --focus 4
ctrl - 5 : yabai -m space --focus 5
ctrl - 6 : yabai -m space --focus 6
ctrl - 7 : yabai -m space --focus 7
ctrl - 8 : yabai -m space --focus 8
ctrl - 9 : yabai -m space --focus 9

# move window to space (index)
ctrl + shift - 1 : yabai -m window --space 1
ctrl + shift - 2 : yabai -m window --space 2
ctrl + shift - 3 : yabai -m window --space 3
ctrl + shift - 4 : yabai -m window --space 4
ctrl + shift - 5 : yabai -m window --space 5
ctrl + shift - 6 : yabai -m window --space 6
ctrl + shift - 7 : yabai -m window --space 7
ctrl + shift - 8 : yabai -m window --space 8
ctrl + shift - 9 : yabai -m window --space 9

# Focus window by direction
ctrl - h : yabai -m window --focus west
ctrl - l : yabai -m window --focus east
ctrl - j : yabai -m window --focus south
ctrl - k : yabai -m window --focus north

# move focused window to occupy the left half of the screen. 
ctrl + shift - h: yabai -m window --grid 1:2:0:0:1:1
ctrl + shift - l: yabai -m window --grid 1:2:1:0:1:1
ctrl + shift - j: yabai -m window --grid 2:1:0:1:1:1
ctrl + shift - k: yabai -m window --grid 2:1:0:0:1:1
ctrl - f: yabai -m window --toggle zoom-fullscreen

# Switch projects (D1/D6 -> D2/D7 -> ... -> D5/D10 -> D1/D6)
ctrl - p : "${HOME}"/.config/yabai/scripts/cycle_projects.sh
ctrl + shift - p : "${HOME}"/.config/yabai/scripts/cycle_projects_reverse.sh

# opens iTerm2
ctrl - return : "${HOME}"/.config/yabai/scripts/open_iterm2.sh
